{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["**/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
